# Bind a04.o, TM.o
#-------------------------------------------------------------------------
a04:		a04.o TM.o
		g++ -o a04 a04.o TM.o -lm
#-------------------------------------------------------------------------
# Compile main.cpp
#-------------------------------------------------------------------------
a04.o:		main.cpp TM.h
		g++ -g -c main.cpp -o a04.o
#-------------------------------------------------------------------------
# Compile TM.h
#-------------------------------------------------------------------------
TM.o:	TM.cpp TM.h
		g++ -g -c TM.cpp -o TM.o
