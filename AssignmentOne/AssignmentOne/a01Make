#----------------------------------------------------------------
# Bind a01.o, DFA.o
#-------------------------------------------------------------------------
a01:		a01.o DFA.o
		g++ -o a01 a01.o DFA.o -lm
#-------------------------------------------------------------------------
# Compile main.cpp
#-------------------------------------------------------------------------
a01.o:		main.cpp DFA.h
		g++ -g -c main.cpp -o a01.o
#-------------------------------------------------------------------------
# Compile DFA.h
#-------------------------------------------------------------------------
DFA.o:	DFA.cpp DFA.h
		g++ -g -c DFA.cpp -o DFA.o
