# Bind a05.o, UTM.o
#-------------------------------------------------------------------------
a05:		a05.o UTM.o
		g++ -o a05 a05.o UTM.o -lm
#-------------------------------------------------------------------------
# Compile main.cpp
#-------------------------------------------------------------------------
a05.o:		main.cpp UTM.h
		g++ -g -c main.cpp -o a05.o
#-------------------------------------------------------------------------
# Compile UTM.h
#-------------------------------------------------------------------------
UTM.o:	UTM.cpp UTM.h
		g++ -g -c UTM.cpp -o UTM.o
