# Bind a03.o, PDA.o
#-------------------------------------------------------------------------
a03:		a03.o PDA.o
		g++ -o a03 a03.o PDA.o -lm
#-------------------------------------------------------------------------
# Compile main.cpp
#-------------------------------------------------------------------------
a03.o:		main.cpp PDA.h
		g++ -g -c main.cpp -o a03.o
#-------------------------------------------------------------------------
# Compile PDA.h
#-------------------------------------------------------------------------
PDA.o:	PDA.cpp PDA.h
		g++ -g -c PDA.cpp -o PDA.o
